# java env
export JAVA_8_HOME="/Library/Java/JavaVirtualMachines/adoptopenjdk-8.jdk/Contents/Home"
export JAVA_11_HOME="/Library/Java/JavaVirtualMachines/adoptopenjdk-11.jdk/Contents/Home"
export JAVA_HOME=${JAVA_11_HOME}
export IDEA_JDK=$JAVA_HOME

# maven env
export MAVEN_OPTS='-Xmx1024m'

# android
export ANDROID_HOME="/Users/marc/projects/sdks/android-sdk"

# node.js
export NODE_PATH="/usr/local/lib/node_modules"
export NVM_DIR="$HOME/.nvm"

# go
export GOROOT="/usr/local/opt/go/libexec"
export GOPATH="/Users/marc/projects/go"

# spark
export SPARK_HOME="/Users/marc/.sdkman/candidates/spark/current"

# ruby
export RBENV_ROOT=/usr/local/var/rbenv

# paths
SCRIPTS_PATH="/Users/marc/projects/scripts"
XCODE_PATH="/Applications/Xcode.app/Contents/Developer/usr/bin"
export PATH="/usr/local/bin:${HOME}/bin:${PATH}:${SCRIPTS_PATH}:${XCODE_PATH}:${GOROOT}/bin"

# misc env
export MANPATH="/opt/local/share/man:${MANPATH}"
export EDITOR='/usr/local/bin/vim'
export HISTCONTROL='ignoredups'
